program somapares;

var

    n, i, produto: longint;

begin

    i:= 1;
    read(n);
    
    while (i <= n) do 
    begin
    
        if ((n + 1) mod 2 = 0) then 
                produto:= n * (n + 1)
                
        else 
            n:= n + 1;
            
            i:= i + 1;
        
end;

        write(produto);
end.
